{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "cleanUrls": true,
  "redirects": [
    {
      "source": "/:path*.html",
      "destination": "/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/api/notify-slack", "destination": "/api/notify-slack.js" }
  ],
  "crons": [
    { "path": "/api/summary-slack", "schedule": "0 14 * * *" },
    { "path": "/api/summary-slack", "schedule": "30 22 * * *" }
  ]
}
