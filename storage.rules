rules_version = '2';

// Firebase Storage Security Rules for CoreTrex Task Attachments
// Deploy these rules to your Firebase project via Firebase Console or Firebase CLI

service firebase.storage {
  match /b/{bucket}/o {
    
    // Task attachments - only authenticated users can read/write
    match /task-attachments/{allPaths=**} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Allow write for authenticated users with file size limit (10MB)
      allow write: if request.auth != null 
                   && request.resource.size < 10 * 1024 * 1024;
      
      // Allow delete for authenticated users
      allow delete: if request.auth != null;
    }
    
    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

